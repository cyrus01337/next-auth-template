{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "lib": ["ESNext"],
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "noEmit": true,
        "paths": {
            "~/*": ["./src/*"]
        },
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "ESNext"
    },
    "exclude": [".astro/", "build/", "dist/", "node_modules/"],
    "include": ["src/**/*", "*.{cjs,js,mjs,ts}", "*.d.ts"]
}
